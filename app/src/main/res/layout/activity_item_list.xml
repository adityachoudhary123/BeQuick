<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.org.carven.bequick.ItemList"
    android:background="#f7e2e1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maths Quiz"
        android:id="@+id/itemButton1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ef7272"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Affairs"
        android:id="@+id/itemButton2"
        android:layout_below="@+id/itemButton1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/itemButton1"
        android:layout_marginTop="70dp"
        android:background="#d569ea"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Knowledge"
        android:id="@+id/itemButton3"
        android:layout_below="@+id/itemButton2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/itemButton1"
        android:layout_marginTop="70dp"
        android:background="#996cf4"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding MCQ"
        android:id="@+id/itemButton4"
        android:layout_below="@+id/itemButton3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/itemButton1"
        android:layout_marginTop="70dp"
        android:background="#86ece4"
        android:textSize="30dp" />


</RelativeLayout>
